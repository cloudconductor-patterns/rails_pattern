upstream <%= node["nginx_app"]["name"] %> {
  server <%= node["nginx_app"]["host"] %>:<%= node["nginx_app"]["port"] %>;
}

server {
  listen       <%= node["nginx"]["port"] %>;
  server_name  <%= node["nginx"]["host"] %>;

  access_log  <%= node["nginx_app"]["log"] %>/<%= node["nginx_app"]["name"] %>.access.log;
  error_log   <%= node["nginx_app"]["log"] %>/<%= node["nginx_app"]["name"] %>.error.log debug;

  index <%= node["nginx_app"]["index"] %>;

  location  <%= node["nginx_app"]["url"] %> {
    if (-f $request_filename) {
      break;
    }
    proxy_set_header X-Real-IP       $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host            $http_host;

    #UnixDomainSocket
    #  proxy_pass http://unicorn-unix-domain-socket;
    #Tcp
    proxy_pass http://<%= node["nginx_app"]["name"] %>;
  }

  #Static File responce setting
  location <%= node["nginx"]["url"] %> {
    root <%= node["nginx"]["root"] %>/public;
  }

}
