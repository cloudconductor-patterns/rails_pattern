{
  "name": "db_configure",
  "description": "Configure cron job to backup mysql database using gem backup",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "default_attributes": {
    "backup_restore": {
      "sources": {
        "enabled": ["mysql"]
      },
      "destinations": {
        "enabled": ["s3"]
      }
    }
  },
  "run_list": [
    "recipe[backup_restore::configure]"
  ]
}
