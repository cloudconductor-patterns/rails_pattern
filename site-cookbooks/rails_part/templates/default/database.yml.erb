<%= @environment %>:
  adapter: '<%= @db['adapter'] %>'
  host: '<%= @db_server[:private_ip] %>'
  <%- if @db['port'] -%>
  port: <%= @db['port'] %>
  <%- end -%>
  database: '<%= @db['database'] %>'
  username: '<%= @db['user'] %>'
  password: '<%= @db['password'] %>'
  encoding: 'utf8'
  reconnect: true
